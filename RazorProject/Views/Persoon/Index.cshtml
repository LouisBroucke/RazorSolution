@model IEnumerable<Persoon>
@{
    ViewData["Title"] = "Index";
}

<h1>Personen</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.Id)</th>
            <th>@Html.DisplayNameFor(m => m.Voornaam)</th>
            <th>@Html.DisplayNameFor(m => m.Familienaam)</th>
            <th>@Html.DisplayNameFor(m => m.Score)</th>
            <th>@Html.DisplayNameFor(m => m.Wedde)</th>
            <th>@Html.DisplayNameFor(m => m.Paswoord)</th>
            <th>@Html.DisplayNameFor(m => m.Geboren)</th>
            <th>@Html.DisplayNameFor(m => m.Gehuwd)</th>
            <th>@Html.DisplayNameFor(m => m.Opmerkingen)</th>
            <th>@Html.DisplayNameFor(m => m.Geslacht)</th>
            <th>Verwijderen</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var persoon in Model)
        {
        <tr>
            <td>@Html.DisplayFor(m => persoon.Id)</td>
            <td>@Html.DisplayFor(m => persoon.Voornaam)</td>
            <td>@Html.DisplayFor(m => persoon.Familienaam)</td>
            <td>@Html.DisplayFor(m => persoon.Score)</td>
            <td>@Html.DisplayFor(m => persoon.Wedde)</td>
            <td>@Html.DisplayFor(m => persoon.Paswoord)</td>
            <td>@Html.DisplayFor(m => persoon.Geboren)</td>
            <td>@Html.DisplayFor(m => persoon.Gehuwd)</td>
            <td>@Html.DisplayFor(m => persoon.Opmerkingen)</td>
            <td>@Html.DisplayFor(m => persoon.Geslacht)</td>
            <td>
                <a asp-action="VerwijderForm" asp-controller="Persoon" asp-route-id="@persoon.Id">
                <img src="~/images/delete.png" /></a>
            </td>
        </tr>
        }
    </tbody>
</table>

<a asp-action="Opslag" asp-controller="Persoon" class="btn btn-primary">Opslag</a>
<a asp-action="Toevoegen" asp-controller="Persoon" class="btn btn-primary">Toevoegen</a>